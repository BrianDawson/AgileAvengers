<p id="notice"><%= notice %></p>

<h2><%= @property.address %></h2>
<h1>
  Comments for review: 
  
</h1>
<h4><%= @review.review %></h4><hr>

<% if @comment.any?%>
<table>
  <thead>
    <tr>
      <th>Comment Date</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @comment.each do |comment| %>
  <tr>
    <td><%= comment.created_at.strftime("%B %d, %Y") %></td>
    <td><%= comment.likes %></td>
    <td><%= comment.dislikes %></td>
    <td><%= comment.comment %></td>
    <td><%= link_to 'edit', edit_property_review_comment_path(@property, @review, comment.id) %></td>
    <% end %>
  </tr>
  <% else %>
    <p>No comments to display.</p>
  <% end %>
 </tbody>
</table><br>
<%= link_to 'Add a comment', new_property_review_comment_path(@property, @review) %>
<%= link_to 'back', property_reviews_path(@property, @review)%>