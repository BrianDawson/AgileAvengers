<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>	

<%= render "/home/search" %>

<% if !@properties.empty? %>
<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Rent</th>
      <th>Pets</th>
      <th>Utilities</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @properties.each do |property| %>
      <tr>
        <td><%= link_to property.address, property %></td>
        <td><%= property.city  %></td>
        <td><%= property.state%></td>
        <td><%= property.zip%></td>
        <td><%= property.bedrooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= display_rent_for(property) %></td>
        <td><%= property.pets %></td>
        <td><%= display_utilities_for(property) %></td>
        <td><%= property.description %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
      </tr>
    <% end%>
  </tbody>
</table>
<% end %>

<p> Don't see your property? &nbsp;<%= link_to 'Add Property', new_property_path %> &nbsp; 
<%= link_to 'New Search', home_index_path %>
</p>


