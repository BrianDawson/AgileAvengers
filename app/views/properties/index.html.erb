<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>	

<% if !@properties.empty? %>

<h3>Filter Search Results</h3>

<%= search_form_for @q do |f| %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <br>
  <%= f.label :zip %>
  <%= f.text_field :zip %>
  <br>
  <%= f.label :bedrooms %>
  <%= f.text_field :bedrooms %>
  <br>
  <%= f.label :bathrooms %>
  <%= f.text_field :bathrooms %>
  <br>
  <%= f.label :rent %>
  <%= f.text_field :rent %>
  <br>
  <%= f.label :pets %>
  <%= f.text_field :pets %>
  <br>
  <%= f.label :utilities %>
  <%= f.text_field :utilities %>
  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Rent</th>
      <th>Pets</th>
      <th>Utilities</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @properties.each do |property| %>
      <tr>
        <td><%= link_to property.address, property %></td>
        <td><%= property.city  %></td>
        <td><%= property.state%></td>
        <td><%= property.zip%></td>
        <td><%= property.bedrooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= property.rent %></td>
        <td><%= property.pets %></td>
        <td><%= property.utilities %></td>
        <td><%= property.description %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end%>
  </tbody>
</table>

<% end %>
<p> Don't see your property? <%= link_to 'Add Property', new_property_path %> </p>
